<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path @menu.photo %>')">
  <div class="banner-content text-center">
    <h1><%= @menu.name %></h1>
  </div>
</div>

<div class="wrapper-user">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="user-card">
          <div class="user-card-title text-center">
            <h2> Your Chef </h2>
          </div>
            <div class="user-card-photo text-center">
              <%= image_tag "lbreen_profile.jpg", { class: "img-circle" } %>
            </div>
          <div class="user-card-details text-center">
            <p class="text-center">he is a good lad</p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="user-card">
          <div class="user-card-title text-center">
            <h2> Review your menu </h2>
          </div>
          <div class="user-card-details">
            <ul>
              <li> <%= @menu.price %> £ </li>
              <li> Type of cuisine <%= @menu.category %></li>
              <li> from <%= @menu.min_guests %> to <%= @menu.max_guests %> </li>
              <li> Starter <%= @menu.starter %></li>
              <li> Main Course <%= @menu.main %></li>
              <li> Dessert <%= @menu.dessert %></li>
            </ul>
          </div>
            <% if user_signed_in? %>
            <%= link_to "Book this menu now", new_menu_booking_path(@menu), {class: "btn btn-danger user-card-btn"} %>
            <% else %>
            <%= link_to "Book this menu now", new_user_registration_path, {class: "btn btn-danger user-card-btn"} %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>






<div class="wrapper-user">
<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <div class="user-card text-center">
        <h1>My Profile</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="user-card">
        <div class="user-card-info">
          <div class="user-card-photo">
            <%= image_tag "lbreen_profile.jpg", { class: "img-circle" } %>
          </div>
          <div class="user-card-details">
            <h2>Account details </h2>

            <p><strong>Name:</strong> <%= "#{@user.first_name} #{@user.last_name}" %></p>
            <p><strong>Email:</strong> <%= @user.email %></p>
            <p><strong>Address:</strong> <%= @user.postal_address %></p>

            <%= link_to "Edit", edit_user_registration_path, { class: "btn btn-danger user-card-edit" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="user-card">
        <div class="user-card-title text-center">
          <h2>My menu's</h2>
        </div>
        <div class="user-card-details">
          <% if @user.menus.count == 0 %>
            <p>You don't have any menus yet!</p>
          <% else %>
            <% @user.menus.each do |menu| %>
              <div class="user-card-menu">
                <%= image_tag menu.photo, { class: "avatar"} %>
                <%= link_to menu.name, menu_path(menu) %>
                <%= link_to "Edit", user_path(menu.user), { class: "btn btn-danger", id: "menu-edit-btn" } %>
              </div>
            <% end %>
          <% end %>
        </div>
        <%= link_to "Add new menu", root_path, { class: "btn btn-danger" } %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="user-card">
        <div class="user-card-title text-center">
          <h2>My bookings</h2>
        </div>
        <div class="user-card-details">

        </div>
        <%= link_to "View all bookings", root_path, { class: "btn btn-danger" } %>
      </div>
    </div>
  </div>
</div>


</div>

